<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:textAppearance="?textAppearanceBodyLarge"
        android:textColor="@color/gray3"
        app:layout_constraintBottom_toTopOf="@id/iv_challenge_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5" />

    <ImageView
        android:id="@+id/iv_today_mark"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_calendar_today_mark_20"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="@id/tv_date" />

    <ImageView
        android:id="@+id/iv_challenge_status"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_challenge_none_42"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />


</androidx.constraintlayout.widget.ConstraintLayout>
