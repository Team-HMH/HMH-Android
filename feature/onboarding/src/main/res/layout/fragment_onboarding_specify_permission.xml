<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnBoardingSpecifyPermissionFragment">


    <TextView
        android:id="@+id/tv_onboarding_specify_permission_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="60dp"
        android:text="@string/specify_permission_title"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_specify_permission_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/specify_permission_description"
        android:textAppearance="@style/TextAppearance.Hmh.BodyMedium"
        android:textColor="?gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_specify_permission_title" />

    <TextView
        android:id="@+id/tv_api_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="@string/api_description_title"
        android:textAppearance="@style/TextAppearance.Hmh.LabelLarge"
        android:textColor="?gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_specify_permission_description" />

    <TextView
        android:id="@+id/tv_onboarding_specify_permission_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:bufferType="spannable"
        android:text="@string/specify_permission_list"
        android:textAppearance="@style/TextAppearance.Hmh.LabelMedium"
        android:textColor="?gray3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_api_description_title" />

    <TextView
        android:id="@+id/tv_permission_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:paddingHorizontal="40dp"
        android:paddingVertical="14dp"
        android:text="@string/permission_later"
        android:textAppearance="@style/TextAppearance.Hmh.TitleSmall"
        android:textColor="?gray1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
