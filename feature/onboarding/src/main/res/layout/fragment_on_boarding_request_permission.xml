<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnBoardingRequestPermissionFragment">


    <TextView
        android:id="@+id/tv_onboarding_request_permission_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="60dp"
        android:text="@string/onboarding_request_permission_title"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_request_permission_description"
        style="?textAppearanceBodyMedium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"
        android:text="@string/onboarding_request_permission_description"
        android:textColor="?gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_request_permission_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_onboarding_accessibility_permission"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_request_permission_description"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/tv_onboarding_accessibility_permission_title"
            style="?textAppearanceTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:text="@string/onboarding_permission1_title"
            android:textColor="?white_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_onboarding_accessibility_permission_description"
            style="@style/TextAppearance.Hmh.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="1dp"
            android:text="@string/onboarding_permission1_description"
            android:textColor="?gray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_accessibility_permission_title" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/tg_onboarding_accessibility_permission"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/white_text"
            app:trackTint="@drawable/toggle_selector"
            app:trackDecorationTint="@drawable/toggle_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view_onboarding_permission1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="?gray7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_onboarding_accessibility_permission" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_onboarding_usageinfo_permission"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_onboarding_permission1"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/tv_onboarding_usageinfo_permission_title"
            style="?textAppearanceTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:text="@string/onboarding_permission2_title"
            android:textColor="?white_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_onboarding_usageinfo_permission_description"
            style="@style/TextAppearance.Hmh.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="1dp"
            android:text="@string/onboarding_permission2_description"
            android:textColor="?gray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_usageinfo_permission_title" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/tg_onboarding_usageinfo_permission"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/white_text"
            app:trackTint="@drawable/toggle_selector"
            app:trackDecorationTint="@drawable/toggle_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_onboarding_permission2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="?gray7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_onboarding_usageinfo_permission" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_onboarding_drawover_permission"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_onboarding_permission2"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/tv_onboarding_drawover_permission_title"
            style="?textAppearanceTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:text="@string/onboarding_permission3_title"
            android:textColor="?white_text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_onboarding_drawover_permission_description"
            style="@style/TextAppearance.Hmh.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="1dp"
            android:text="@string/onboarding_permission3_description"
            android:textColor="?gray3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_drawover_permission_title" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/tg_onboarding_drawover_permission"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbTint="@color/white_text"
            app:trackTint="@drawable/toggle_selector"
            app:trackDecorationTint="@drawable/toggle_selector" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_onboarding_permission3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="?gray7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_onboarding_drawover_permission" />


    <TextView
        android:id="@+id/tv_api_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="21dp"
        android:text="@string/api_description_title"
        android:textAppearance="@style/TextAppearance.Hmh.LabelLarge"
        android:textColor="?gray4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_onboarding_permission3" />

    <TextView
        android:id="@+id/tv_api_description_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="7dp"
        android:text="@string/api_description_contents"
        android:textAppearance="@style/TextAppearance.Hmh.LabelMedium"
        android:textColor="?gray4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_api_description_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
