<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnBoardingSelectScreenTimeFragment">

    <TextView
        android:id="@+id/tv_onboarding_screentime_goal_title"
        style="@style/TextAppearance.Hmh.DisplaySmall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="30dp"
        android:text="@string/onboarding_screentime_goal_title"
        android:textColor="?white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_screentime_goal_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:textColor="?gray2"
        style="@style/TextAppearance.Hmh.BodyMedium"
        android:layout_marginTop="7dp"
        android:text="@string/onboarding_screentime_goal_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_screentime_goal_title" />

    <NumberPicker
        android:id="@+id/np_onboarding_screentime_goal"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/TextAppearance.Hmh.HeadlineLarge"
        android:theme="@style/AppTheme.NumberPicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_onboarding_screentime_goal_unit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:text="@string/all_hour"
        android:textColor="?gray2"
        style="@style/TextAppearance.Hmh.HeadlineSmall"
        app:layout_constraintTop_toTopOf="@+id/np_onboarding_screentime_goal"
        app:layout_constraintStart_toEndOf="@+id/np_onboarding_screentime_goal"
        app:layout_constraintBottom_toBottomOf="@+id/np_onboarding_screentime_goal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
