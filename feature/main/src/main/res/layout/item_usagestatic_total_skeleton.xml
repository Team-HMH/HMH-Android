<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_blackhole"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?blackground"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blackhole_description_skeleton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?gray6"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_total_usage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blackhole_description_skeleton2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?gray6"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_total_usage"
        app:layout_constraintTop_toBottomOf="@id/tv_blackhole_description_skeleton" />

    <ImageView
        android:id="@+id/iv_total_usage"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="40dp"
        android:background="?gray5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_blackhole" />

    <TextView
        android:id="@+id/tv_total_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textAppearance="?textAppearanceDisplayMedium"
        android:textColor="?white_text"
        app:layout_constraintBottom_toBottomOf="@id/iv_blackhole"
        app:layout_constraintStart_toStartOf="@id/iv_total_usage" />


</androidx.constraintlayout.widget.ConstraintLayout>
