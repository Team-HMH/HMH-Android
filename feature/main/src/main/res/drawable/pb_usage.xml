<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 프로그래스바의 바탕 색깔 -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="?gray7" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- 프로그래스바의 진행률 색깔 선택 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:startColor="?blue_purple_button"
                    android:endColor="?blue_purple_button40"
                    android:type="linear" />
                <corners android:radius="6dp" />
            </shape>
        </clip>
    </item>
</layer-list>