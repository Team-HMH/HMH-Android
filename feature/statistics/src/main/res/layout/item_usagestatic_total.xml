<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_statics_total_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="@string/all_goal_time"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_statics_total_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="31sp"
        app:layout_constraintStart_toStartOf="@id/tv_statics_total_goal_title"
        app:layout_constraintTop_toBottomOf="@id/tv_statics_total_goal_title" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb_statics_total"
        style="@style/AppTheme.statics.main.progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:progress="30"
        app:layout_constraintStart_toStartOf="@id/tv_statics_total_goal_title"
        app:layout_constraintTop_toBottomOf="@id/tv_statics_total_hour" />

    <TextView
        android:id="@+id/tv_statics_total_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text=""
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tv_statics_total_time_left_title"
        app:layout_constraintTop_toTopOf="@id/tv_statics_total_time_left_title" />

    <TextView
        android:id="@+id/tv_statics_total_time_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:text="@string/all_left"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pb_statics_total" />

    <ImageView
        android:id="@+id/iv_statics"
        android:layout_width="wrap_content"
        android:layout_height="216dp"
        android:contentDescription="@string/item_usagestatic_appicon_description"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_statics_total_time_left_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
