<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp">

    <ProgressBar
        android:id="@+id/pb_item_usagestat"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_marginBottom="12dp"
        android:progress="30"
        android:progressDrawable="@drawable/ll_statics_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_itemusagestat_appicon"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="17dp"
        android:contentDescription="@string/item_usagestatic_appicon_description"
        app:layout_constraintBottom_toBottomOf="@id/pb_item_usagestat"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="@id/pb_item_usagestat"
        app:layout_constraintTop_toTopOf="@id/pb_item_usagestat" />

    <TextView
        android:id="@+id/tv_itemusagestat_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="2dp"
        android:text="Instagram"
        app:layout_constraintStart_toEndOf="@id/iv_itemusagestat_appicon"
        app:layout_constraintTop_toTopOf="@id/iv_itemusagestat_appicon"
        style="@style/TextAppearance.App.LabelLarge"
        android:textColor="@color/gray1"/>

    <TextView
        android:id="@+id/tv_itemusagestat_goal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 20m"
        app:layout_constraintStart_toStartOf="@id/tv_itemusagestat_appname"
        app:layout_constraintTop_toBottomOf="@id/tv_itemusagestat_appname"
        style="@style/TextAppearance.App.BodySmall"
        android:textColor="@color/white_text"/>

    <TextView
        android:id="@+id/tv_itemusagestat_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="30m"
        app:layout_constraintBottom_toBottomOf="@id/pb_item_usagestat"
        app:layout_constraintEnd_toStartOf="@id/tv_itemusagestat_time_left_title"
        app:layout_constraintTop_toTopOf="@id/pb_item_usagestat"
        style="@style/TextAppearance.App.TitleMedium"
        android:textColor="@color/white_text"/>

    <TextView
        android:id="@+id/tv_itemusagestat_time_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/all_left"
        app:layout_constraintBottom_toBottomOf="@id/pb_item_usagestat"
        app:layout_constraintEnd_toEndOf="@id/pb_item_usagestat"
        app:layout_constraintTop_toTopOf="@id/pb_item_usagestat"
        style="@style/TextAppearance.App.BodyLarge"
        android:textColor="@color/gray2"/>


</androidx.constraintlayout.widget.ConstraintLayout>
