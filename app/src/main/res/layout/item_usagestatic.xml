<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_itemusagestat_appicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:contentDescription="iv_itemusagestat_appicon"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemusagestat_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="유튜브"
        app:layout_constraintStart_toEndOf="@id/iv_itemusagestat_appicon"
        app:layout_constraintTop_toTopOf="@id/iv_itemusagestat_appicon" />

    <TextView
        android:id="@+id/tv_itemusagestat_left_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/tv_itemusagestat_timeleft"
        app:layout_constraintTop_toTopOf="@id/iv_itemusagestat_appicon" />

    <TextView
        android:id="@+id/tv_itemusagestat_timeleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="시간 남음"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_itemusagestat_appicon" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/pb_item_usagestat"
        style="@style/Theme.HMHAndroid.main.progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progress="30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_itemusagestat_appicon" />

</androidx.constraintlayout.widget.ConstraintLayout>