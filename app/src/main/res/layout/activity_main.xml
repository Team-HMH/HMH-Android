<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_usagestat_total"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@id/rv_usagestat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_usagestat_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/usagestat_total_title"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_usagestat_total_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4시간"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/tv_usagestat_total_title"
            app:layout_constraintTop_toBottomOf="@id/tv_usagestat_total_title" />

        <TextView
            android:id="@+id/tv_usagestat_total_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간 30분 남음"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_usagestat_total_title" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            style="@style/Theme.HMHAndroid.main.progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:progress="30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_usagestat_total_hour" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_usagestat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_usagestat_total" />

</androidx.constraintlayout.widget.ConstraintLayout>